<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.graeme.blockpuzzle.animalPuzzle2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Puzzle:"
        android:id="@+id/textView5"
        android:layout_marginTop="35dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="36dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAnimalIcon"
        android:src="@drawable/elk_icon"
        android:layout_marginEnd="52dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAnimalBLeft"
        android:src="@drawable/elk_bleft"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:layout_alignParentBottom="true"
        android:layout_toStartOf="@+id/imageAnimalBRight" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAnimalBRight"
        android:src="@drawable/elk_bright"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/imageAnimalTRight" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAnimalTLeft"
        android:src="@drawable/elk_tleft"
        android:layout_above="@+id/imageAnimalBLeft"
        android:layout_toStartOf="@+id/imageAnimalBRight" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageAnimalTRight"
        android:src="@drawable/elk_tright"
        android:layout_alignTop="@+id/imageAnimalTLeft"
        android:layout_alignStart="@+id/imageAnimalIcon" />

</RelativeLayout>