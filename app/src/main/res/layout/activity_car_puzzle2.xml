<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.graeme.blockpuzzle.carPuzzle2">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Puzzle:"
        android:id="@+id/textView5"
        android:layout_marginTop="32dp"
        android:layout_alignTop="@+id/imageCarIcon"
        android:layout_toStartOf="@+id/imageCarIcon"
        android:layout_marginEnd="37dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageCarIcon"
        android:src="@drawable/gold_car_icon"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="79dp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageCarBLeft"
        android:layout_alignStart="@+id/textView5"
        android:src="@drawable/gold_car_bleft"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageCarBRight"
        android:src="@drawable/gold_car_bright"
        android:layout_toEndOf="@+id/imageCarBLeft"
        android:layout_below="@+id/imageCarTLeft"
        android:layout_alignParentBottom="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageCarTLeft"
        android:layout_above="@+id/imageCarBLeft"
        android:layout_alignStart="@+id/imageCarBLeft"
        android:src="@drawable/gold_car_tleft" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageCarTRight"
        android:layout_alignTop="@+id/imageCarTLeft"
        android:layout_alignStart="@+id/imageCarBRight"
        android:layout_alignEnd="@+id/imageCarBRight"
        android:src="@drawable/gold_car_tright" />

</RelativeLayout>
